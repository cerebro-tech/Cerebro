#!/usr/bin/env bash
# ~/cerebro_scripts/rparu

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" &>/dev/null && pwd)"

# Ensure paru config exists
mkdir -p "$HOME/.config/paru"

CONF="$HOME/.config/paru/paru.conf"

# Inject custom makepkg command if missing
if ! grep -q "makepkg_command" "$CONF" 2>/dev/null; then
  {
    echo "[options]"
    echo "makepkg_command = $SCRIPT_DIR/ram_build.sh makepkg"
  } >> "$CONF"
fi

exec paru "$@"
