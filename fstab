# /boot
UUID=<UUID_BOOT>  /boot     vfat   relatime,utf8=1,errors=remount-ro           0 2

# / (root) - F2FS with LZ4 compression
UUID=<UUID_ROOT>  /         f2fs   relatime,compress_algorithm=lz4,compress_chksum,discard=async,inline_xattr,inline_dentry  0 1

# /pkgcache - XFS
UUID=<UUID_PKGCACHE>  /pkgcache  xfs  relatime,allocsize=256k,discard=async  0 2

# /steam - XFS
UUID=<UUID_STEAM>  /steam     xfs  relatime,allocsize=1m,discard=async  0 2

# /video - XFS
UUID=<UUID_VIDEO>  /video     xfs  relatime,allocsize=4m,discard=async  0 2

# /data - F2FS with ZSTD
UUID=<UUID_DATA>   /data      f2fs  relatime,compress_algorithm=zstd,compress_chksum,discard=async  0 2
