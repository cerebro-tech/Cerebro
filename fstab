# / (root) — F2FS (LZ4 compression, SSD optimized)
LABEL=ROOT      /          f2fs   relatime,compress_algorithm=lz4,compress_chksum,discard=async,inline_xattr,inline_dentry   0 1

# /pkgcache — XFS (pacman/paru package cache)
LABEL=PKGCACHE  /pkgcache  xfs    relatime,allocsize=256k,discard=async  0 2

# /boot  — FAT32 (minimal writes, safe boot)
LABEL=BOOT      /boot      vfat   relatime,utf8=1,errors=remount-ro     0 2

# /steam — XFS (Steam games, large sequential reads)
LABEL=STEAM     /steam     xfs    noauto,relatime,allocsize=1m,discard=async    0 2

# /video — XFS (video editing/rendering, huge files)
LABEL=VIDEO     /video     xfs    noauto,relatime,allocsize=4m,discard=async    0 2

# /data — F2FS (ZSTD compression, ETL/data analytics)
LABEL=DATA      /data      f2fs   noauto,relatime,compress_algorithm=zstd,compress_chksum,discard=async   0 2

# tmpfs overlays (RAM-backed storage for performance + SSD wear reduction)
tmpfs           /var/cache     tmpfs   noatime,mode=1777     0 0
tmpfs           /rambuilds     tmpfs   noatime,mode=1777     0 0
